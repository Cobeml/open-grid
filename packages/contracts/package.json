{
  "name": "@open-grid/contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Open Grid electrical monitoring system",
  "main": "index.js",
  "scripts": {
    "build": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy": "hardhat deploy",
    "deploy:multi": "ts-node scripts/deploy-multi-chain.ts",
    "deploy:polygon": "hardhat deploy --network polygon",
    "deploy:arbitrum": "hardhat deploy --network arbitrum",
    "deploy:optimism": "hardhat deploy --network optimism",
    "deploy:base": "hardhat deploy --network base",
    "deploy:avalanche": "hardhat deploy --network avalanche",
    "deploy:bnb": "hardhat deploy --network bnb",
    "deploy:gnosis": "hardhat deploy --network gnosis",
    "deploy:zircuit": "hardhat deploy --network zircuit",
    "deploy:flare": "hardhat deploy --network flare",
    "deploy:hedera": "hardhat deploy --network hedera",
    "deploy:sepolia": "hardhat deploy --network sepolia",
    "deploy:mumbai": "hardhat deploy --network polygonMumbai",
    "verify": "hardhat verify",
    "verify:polygon": "hardhat verify --network polygon",
    "verify:arbitrum": "hardhat verify --network arbitrum",
    "verify:optimism": "hardhat verify --network optimism",
    "verify:base": "hardhat verify --network base",
    "node": "hardhat node",
    "accounts": "hardhat run scripts/accounts.ts",
    "size": "hardhat size-contracts",
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --ext .js,.ts . --fix",
    "format": "prettier --write \"**/*.{js,ts,sol}\"",
    "typechain": "hardhat compile"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@openzeppelin/contracts": "^5.0.0",
    "ethers": "^6.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "chai": "^4.3.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.57.0",
    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.11.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.2.0",
    "prettier-plugin-solidity": "^1.3.0",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "solidity",
    "hardhat",
    "chainlink",
    "functions",
    "energy",
    "iot",
    "monitoring",
    "multi-chain"
  ],
  "author": "Open Grid Team",
  "license": "MIT"
}
