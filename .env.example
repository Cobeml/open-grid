# =============================================================================
# Open Grid: Electrical Networking Monitoring System
# Environment Variables Example
# =============================================================================

# =============================================================================
# BLOCKCHAIN NETWORKS - TESTNET RPC URLs
# =============================================================================

# Polygon Mumbai (Legacy testnet)
POLYGON_TESTNET_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/your-api-key
# Alternative: https://polygon-testnet.public.blastapi.io
# Alternative: https://rpc-mumbai.maticvigil.com

# Arbitrum Sepolia
ARBITRUM_TESTNET_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
# Alternative: https://arbitrum-sepolia.drpc.org

# Optimism Sepolia (OP Sepolia)
OPTIMISM_TESTNET_RPC_URL=https://sepolia.optimism.io
# Alternative: https://optimism-sepolia.drpc.org
# Alternative: https://optimism-sepolia.gateway.tenderly.co

# Base Sepolia
BASE_TESTNET_RPC_URL=https://sepolia.base.org
# Alternative: https://base-sepolia.gateway.tenderly.co
# Alternative: https://base-sepolia-rpc.publicnode.com

# Avalanche Fuji
AVALANCHE_TESTNET_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
# Alternative: https://api.zan.top/avax-fuji/ext/bc/C/rpc

# BNB Chain Testnet (BSC Testnet)
BNB_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545
# Alternative: https://bsc-testnet.drpc.org
# Alternative: https://bnb-testnet.api.onfinality.io/public

# Gnosis Chiado
GNOSIS_TESTNET_RPC_URL=https://rpc.chiadochain.net
# Alternative: https://gnosis-chiado.drpc.org
# Alternative: https://gnosis-chiado-rpc.publicnode.com

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Private key for contract deployment (same key used across all networks)
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Gas limit for contract deployment
GAS_LIMIT=3000000

# Gas price (in wei) - leave empty for automatic
GAS_PRICE=

# =============================================================================
# CHAINLINK FUNCTIONS CONFIGURATION
# =============================================================================

# Chainlink Functions Router addresses (testnet)
POLYGON_FUNCTIONS_ROUTER=0x6E2dc0F9DB014aE19888F539E59285D2Ea04244C
ARBITRUM_FUNCTIONS_ROUTER=0x520D14AE678b41067f029218770E6dEdBfB3C04D
OPTIMISM_FUNCTIONS_ROUTER=0x520D14AE678b41067f029218770E6dEdBfB3C04D
BASE_FUNCTIONS_ROUTER=0x520D14AE678b41067f029218770E6dEdBfB3C04D
AVALANCHE_FUNCTIONS_ROUTER=0x520D14AE678b41067f029218770E6dEdBfB3C04D
BNB_FUNCTIONS_ROUTER=0x520D14AE678b41067f029218770E6dEdBfB3C04D
GNOSIS_FUNCTIONS_ROUTER=0x520D14AE678b41067f029218770E6dEdBfB3C04D

# Chainlink Functions Subscription IDs (create one per network)
POLYGON_SUBSCRIPTION_ID=your_polygon_subscription_id
ARBITRUM_SUBSCRIPTION_ID=your_arbitrum_subscription_id
OPTIMISM_SUBSCRIPTION_ID=your_optimism_subscription_id
BASE_SUBSCRIPTION_ID=your_base_subscription_id
AVALANCHE_SUBSCRIPTION_ID=your_avalanche_subscription_id
BNB_SUBSCRIPTION_ID=your_bnb_subscription_id
GNOSIS_SUBSCRIPTION_ID=your_gnosis_subscription_id

# Chainlink Functions DON ID (usually same across networks)
DON_ID=fun-polygon-mumbai-1

# =============================================================================
# DATA SOURCES & API KEYS
# =============================================================================

# UtilityAPI (for Con Edison smart meter data)
UTILITY_API_KEY=your_utility_api_key
UTILITY_API_SECRET=your_utility_api_secret

# Alternative: Green Button API
GREEN_BUTTON_API_KEY=your_green_button_api_key

# Mock data configuration
MOCK_DATA_ENABLED=true
MOCK_DATA_SOURCE=kaggle_smart_meter
# Options: kaggle_smart_meter, london_households, synthetic

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Mapbox API key for geospatial visualization
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# WalletConnect Project ID
WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id

# =============================================================================
# DATABASE & STORAGE
# =============================================================================

# Database connection (for off-chain data storage)
DATABASE_URL=postgresql://username:password@localhost:5432/opengrid

# Redis for caching (optional)
REDIS_URL=redis://localhost:6379

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn

# Log level
LOG_LEVEL=info
# Options: error, warn, info, debug

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Network to use for development (default)
DEFAULT_NETWORK=polygon

# Enable/disable specific networks
ENABLE_POLYGON=true
ENABLE_ARBITRUM=true
ENABLE_OPTIMISM=true
ENABLE_BASE=true
ENABLE_AVALANCHE=true
ENABLE_BNB=true
ENABLE_GNOSIS=true

# Test configuration
TEST_PRIVATE_KEY=your_test_private_key_here
TEST_ACCOUNT_ADDRESS=your_test_account_address

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================

# Rate limiting for API calls
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60000

# JWT secret for authentication
JWT_SECRET=your_jwt_secret_here

# =============================================================================
# NOTIFICATIONS & ALERTS
# =============================================================================

# Discord webhook for alerts
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Email configuration for alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# =============================================================================
# DEPLOYMENT ENVIRONMENT
# =============================================================================

# Environment
NODE_ENV=development
# Options: development, staging, production

# Port for frontend
FRONTEND_PORT=3000

# Port for backend API
API_PORT=3001

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Replace all "your_*" values with actual credentials
# 2. Never commit this file to version control
# 3. Use different API keys for different environments
# 4. For production, use mainnet RPC URLs and mainnet Chainlink addresses
# 5. Chainlink Functions Router addresses may vary by network - check official docs
# 6. Some networks may require additional configuration (e.g., custom gas settings)
# 7. Consider using a secrets management service for production deployments
